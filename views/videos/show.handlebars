<div class="contents-container">
  <div class="video-card">

    <div class="video-title">
      <h1>{{video.title}}</h1>
    </div>

    <iframe class="video-player" src="{{video.url}}" frameborder="0" allowfullscreen></iframe>

    <div class="video-description">
      <p>{{video.description}}</p>
    </div>

    <form id="edit-video-form" method="get" action="/videos/{{video._id}}/edit">
      <input id="edit-button" type="submit" value="EDIT" class="add-video-button"/>
    </form>

    <form id="delete-video-form" method="post" action="/videos/{{video._id}}/deletions">
      <input id="delete-button" type="submit" value="DELETE" class="add-video-button"/>
    </form>
  </div>
</div>
